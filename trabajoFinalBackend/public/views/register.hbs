<!-- Ingreso de datos -->
<div class="container my-3">
    <div class="jumbotron">
        <h1 style="color: blue;">Registro de Usuario</h1>
        <br>
        <div class="container my-3">
            <form id="form" action="/register" method="post" role="form" autocomplete="off">
                <div class="form-group">
                    <input id="email" name="email" placeholder="email" class="form-control" type="email"
                        required="required">
                </div>
                <div class="form-group">
                    <input id="nombre" name="nombre" placeholder="nombre" class="form-control" type="text"
                        required="required">
                </div>
                <div class="form-group">
                    <input id="direccion" name="direccion" placeholder="direccion" class="form-control" type="text"
                        required="required">
                </div>
                <div class="form-group">
                    <input id="edad" name="edad" placeholder="edad" class="form-control" type="number"
                        required="required">
                </div>
                <div class="form-group">
                    <input id="celular" name="celular" placeholder="celular" class="form-control" type="tel"
                        required="required">
                </div>
                <div class="form-group">
                    <input id="avatar" name="avatar" placeholder="avatar" class="form-control" type="text"
                        required="required">
                </div>
                <div class="form-group">
                    <input id="password" name="password" placeholder="password" class="form-control" type="password"
                        required="required">
                </div>
                <div class="form-group">
                    <input class="btn btn-success my-3" type="submit" value="Register">
                </div>
            </form>
        </div>

        <hr>
        <div class="text-left">
            <a class="btn btn-success my-3" href='/login'>Ir a Login</a>
        </div>
    </div>
</div>